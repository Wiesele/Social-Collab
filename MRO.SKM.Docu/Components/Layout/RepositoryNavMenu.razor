@using MRO.SKM.SDk.Extensions
<MudNavMenu Rounded="true" Style="display: flex; flex-flow: column; height: inherit;">
    @if (this.Repository == null)
    {
        <MudProgressCircular Indeterminate="true"></MudProgressCircular>
    }
    else
    {
        <MudNavLink Href="@GetUrl("")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Dashboard">Home
        </MudNavLink>
        <MudNavLink Href="@GetUrl("code")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Assignment">Code
        </MudNavLink>
        <MudNavGroup Title="Dokumentieren" Icon="@Icons.Material.Outlined.Edit">
            <MudNavLink Href="@GetUrl("comment")" Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Outlined.Assignment">Nach Datei
            </MudNavLink>
            <MudNavLink Href="@GetUrl("comment/missing")" Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Outlined.Assignment">Fehlende Doku
            </MudNavLink>
        </MudNavGroup>
        
        <MudNavLink Href="@GetUrl("guide")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Map" Disabled="Repository.StyleGuide.IsNullOrWhiteSpace()">Styleguide
        </MudNavLink>

        <MudDivider></MudDivider>

        <MudNavLink Href="@GetUrl("settings/languages")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Language">Spracheinstellungen
        </MudNavLink>
        
        <MudNavLink Href="@GetUrl("settings/ai")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Construction">AI-Einstellungen
        </MudNavLink>
        <MudNavLink Href="@GetUrl("settings")" Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Settings">Einstellungen
        </MudNavLink>
    }
</MudNavMenu>